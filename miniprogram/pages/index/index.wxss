/**index.wxss**/

.container {
    background-color: white;
    height: 100vh;
    padding: 0;
}

.slider {
    width: 600rpx;
    padding: 100rpx 80rpx;
}

.slider_text {
    display: block;
    text-align: center;
    margin: 10rpx auto;
    color: #999999;
}

.task_items {
    /* width: 700rpx; */
    display: flex;
    flex-wrap: wrap;
    width: 600rpx;
    margin: 0 auto;
}

.task_item {
    width: 120rpx;
    height: 200rpx;
    margin: 40rpx;
    text-align: center;
}

.task_item image {
    width: 120rpx;
    height: 120rpx;
    display: block;
}

.cate_text_active {
    color: #ff5556;
}

.btn_start {
    background-color: #ff5556;
    border-radius: 40rpx;
    margin-bottom: 100rpx;
    color: aliceblue;
}

.clock {
    overflow: hidden;
    background-color: #ff5556;
}

.progress {
    height: 400rpx;
    width: 400rpx;
    margin: 170rpx auto;
    position: relative;
}

.progress_start,
.progress_time {
    /* background-color:red; */
    height: 400rpx;
    width: 400rpx;
    margin: 80rpx auto;
    position: absolute;
}

.progress_text {
    color: #ffffff;
    font-size: 25px;
    width: 170rpx;
    position: absolute;
    text-align: center;
    top: 235rpx;
    left: 117rpx;
}

.btns .okbtn,
.btns .pausebtn,
.btns .continueBtn,
.btns .cancleBtn {
    width: 280rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #ffffff;
    border: 1rpx solid #ffffff;
    border-radius: 20rpx;
    margin: 0 auto 20rpx auto;
}