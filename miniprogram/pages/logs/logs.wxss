.logs {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    border: 10rpx solid #eeeeee
}

.sum {
    width: 46vw;
    height: 160rpx;
    padding: 30rpx 0;
    text-align: center;
    box-sizing: border-box;
}

.item-title {
    color: #6B747E;
}

.item-val {
    font-size: 45rpx;
    padding: 20rpx;
    color: #ff5556;
}

.detail-title {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
    margin: 0 30rpx;
    border-bottom: 3rpx solid #ff5556;
}

.active {
    color: #ff5556;
}

.list-items {
    display: flex;
    padding: 10rpx 40rpx;
    justify-content: space-between;
    font-size: 40rpx;
}